layout {
  default_tab_template {
    children
    pane size=1 borderless=true {
      plugin location="zellij:compact-bar"
    }
  }
  tab name="nvim" focus=true {
    pane {
      name "nvim"
    }
  }
  tab name="git" {
    pane split_direction="horizontal" {
      pane {
        cwd "/home/dmitry/.local/share/chezmoi"
        size "80%"
        name "lazygit"
        command "lazygit"
      }
      pane {
        size "20%"
        name "chezmoi add"
      }
    }
  }
  tab name="term" {
    pane {
      name "term"
    }
  }
  tab name="claude" {
    pane {
      command "claude"
    }
  }
}
